<MySpace>
    GridLayout:
        cols:1
        size:root.width, root.height
        GridLayout:
            cols:1
            Label:
                id: message
                text: app.data
            TextInput:
                id: recipient
                multiline: False
                on_text_validate: message.focus = True
            ToggleButton:
                text: 'Start' if self.state == 'normal' else 'Stop'
                on_state:
                    app.droid.startLocating() if self.state == 'down' else \
                    app.droid.stopLocating()
            IntentButton:
                sms_recipient: recipient.text
                sms_message: app.data
                text: 'Send SMS'
                size_hint_y: None
                height: sp(40)
                on_release: self.send_sms()
            