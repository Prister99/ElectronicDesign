<MySpace>
    recipient:recipient
    GridLayout:
        cols:1
        size:root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: "Number: "
            TextInput:
                id: recipient
                multiline: False
                on_text_validate: message.focus = True
            Label:
                text: "Coordinates: " + app.lat + app.ln
        Button:
            text: "Send coordinates "
            sms_recipient: recipient.text
            size_hint_y: None
            height: sp(40)
            on_release: self.send_sms()
        Button:
            text: "GPS Coordinates "
            size_hint_y: None
            height: sp(40)
            on_press:app.check_gps_permissions() + root.on_start()
            
            