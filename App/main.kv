<MySpace>
    recipient:recipient
    GridLayout:
        cols:1
        size:root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: "Number: "
            TextInput:
                id: recipient
                multiline: False
                on_text_validate: message.focus = True

        Button:
            text: "Send coordinates: "
            sms_recipient: recipient.text
            sms_message: root.gps_location
            size_hint_y: None
            height: sp(40)
            on_press:root.btn()
            on_release: self.send_sms()
            